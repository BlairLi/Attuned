<script>
  $(document).ready(function () {
    $('#addLessonBtn').on('click', function () {
      //$('.popupContent.lessonForm').addClass('showPopUp');
      //$('body').addClass('popupOpen');
    })
    $('#addHomeWork').on('click', function () {
      //$('.popupContent.homeworkForm').addClass('showPopUp');
      //$('body').addClass('popupOpen');
    })
    $('.popupOverlay, .closePopUp').on('click', function () {
      //$('.popupContent').removeClass('showPopUp');
      //$('body').removeClass('popupOpen');
    })
    $('.addDelQues .icons .add').on('click', function () {
      $('.clone .optionWrapper').clone(true).appendTo('.multipleOptions');
    })

    $('.optionType').on('change', function () {
      var value = $(this).val();
      if (value == 'text') {
        $(this).parents('.optionWrapper').find('.videoField').removeClass('show').addClass('hide');
        $(this).parents('.optionWrapper').find('.textField').removeClass('hide').addClass('show');
      }
      else {
        $(this).parents('.optionWrapper').find('.videoField').removeClass('hide').addClass('show');
        $(this).parents('.optionWrapper').find('.textField').removeClass('show').addClass('hide');
      }
    })

    $('.addDelQues .del').on('click', function (e) {
      $(this).closest(".optionWrapper").remove();
    })

  })

</script>